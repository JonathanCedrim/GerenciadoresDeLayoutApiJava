<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="@string/txt_auto_complete_estados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView android:id="@+id/auto_complet_auto_complet_estados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1" android:completionHint="digite o nome de um estado"/>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_auto_complet_submit"/>
</LinearLayout>